<h2>Edit Task</h2>

<div class="form-row">
  <div class="col-md-2 mb-3">
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control" %>
      <%= f.label :details %>
      <%= f.text_field :details, class:"form-control" %> <br>
      <div class="d-flex">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div> <br>
      <%= f.submit "Edit Task", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="link"><%= link_to "Back to list", tasks_path %></div>
